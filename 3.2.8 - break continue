# break - exemplo

print("The break instrução:")
for i in range(1, 6):
    if i == 3:
        break
    print("Dentro do laço.", i)
print("Fora do loop.")


# continue - exemplo

print("The continue instrução:")
for i in range(1, 6):
    if i == 3:
        continue
    print("Dentro do laço.", i)
print("Fora do loop.")

# enumerar números pares
print("Enumere os números pares de 0 a 10")
for i in range(11):
    if i % 2:
        continue
    print("Número par: ",i)
print("Fim da brincadeira...")

